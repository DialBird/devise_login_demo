<%= render 'shared/panel', panel_title: 'サインイン' do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, placeholder: 'Email', class: 'form-control input-lg mb-25' %>

    <%= f.password_field :password, placeholder: 'Password', class: 'form-control input-lg mb-25' %>

    <%= f.password_field :password_confirmation, placeholder: 'Password Confirm', class: "form-control input-lg mb-25" %>

    <div class="text-center">
      <%= link_to "Back", new_session_path(resource_name), class: 'btn btn-primary btn-lg' %>
      <%= f.submit "Sign Up", class: 'btn btn-success btn-lg' %>
    </div>
  <% end %>
<% end %>
