<%= render 'shared/panel', panel_title: 'ログイン' do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <%= link_to user_facebook_omniauth_authorize_path, class: 'btn btn-social btn-facebook btn-lg btn-block mb-25' do %>
      <i class="fa fa-facebook"></i>facebookログイン
    <% end %>

    <%= f.email_field :email, placeholder: 'Email', class: 'form-control input-lg mb-25' %>

    <%= f.password_field :password, placeholder: 'Password', class: 'form-control input-lg mb-25' %>

    <div class="text-center">
      <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
    </div>
    <div class="text-right">
      <%= link_to "sign in?", new_registration_path(resource_name), class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>
